<div class="col-md-4 mx-auto p-5">
    <div class="card text-center">
        <div class="card-header">
            <h3>Nueva ronda</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="number" name="roundId" class="form-control" placeholder="ID de la ronda">
                </div>
                <div class="form-group">
                    <input type="text" name="roundedNumber" class="form-control" placeholder="Nº de la ronda">
                </div>
                <div class="form-group">
                    <input type="number" name="qMembers" class="form-control" placeholder="Nº Integrantes">
                </div>
                <div class="form-group">
                    <input type="date" name="startDate" class="form-control" placeholder="Fecha de inicio">
                </div>
                <div class="form-group">
                    <input type="date" name="endDate" class="form-control" placeholder="Fecha de cierre">
                </div>
                <div class="form-group">
                    <input type="text" name="qDues" class="form-control" placeholder="Nº Cuotas">
                </div>
                <div class="form-group">
                    <input type="text" name="amount" class="form-control" placeholder="Importe">
                </div>
                <div class="form-group">
                    <input type="number" name="total" class="form-control" placeholder="Total">
                </div>
                <div class="form-group">
                    <input type="text" name="state" class="form-control" placeholder="Estado">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Registrar
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>