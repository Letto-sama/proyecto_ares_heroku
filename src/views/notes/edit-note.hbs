<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Modificar ronda</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="number" name="roundId" class="form-control" placeholder="ID de la ronda"
                        value="{{note.roundId}}">
                </div>
                <div class="form-group">
                    <input type="text" name="roundedNumber" class="form-control" placeholder="Nº de la ronda"
                        value="{{note.roundedNumber}}">
                </div>
                <div class="form-group">
                    <input type="number" name="qMembers" class="form-control" placeholder="Nº Integrantes"
                        value="{{note.qMembers}}">
                </div>
                <div class="form-group">
                    <input type="date" name="startDate" class="form-control" placeholder="Fecha de inicio"
                        value="{{note.startDate}}">
                </div>
                <div class="form-group">
                    <input type="date" name="endDate" class="form-control" placeholder="Fecha de cierre"
                        value="{{note.endDate}}">
                </div>
                <div class="form-group">
                    <input type="text" name="qDues" class="form-control" placeholder="Nº Cuotas" value="{{note.qDues}}">
                </div>
                <div class="form-group">
                    <input type="number" name="amount" class="form-control" placeholder="Importe" value="{{note.amount}}">
                </div>
                <div class="form-group">
                    <input type="number" name="total" class="form-control" placeholder="Total" value="{{note.total}}">
                </div>
                <div class="form-group">
                    <input type="text" name="state" class="form-control" placeholder="Estado"
                        value="{{note.state}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>